---
layout: null
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign pages = site.pages | where_exp: "p", "p.sitemap != false" %}
  {% for p in pages %}
  <url>
    <loc>{{ site.url }}{{ p.url | replace: 'index.html','' }}</loc>
    <lastmod>{{ p.date | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>{% if p.url == '/' %}1.0{% else %}0.5{% endif %}</priority>
  </url>
  {% endfor %}
</urlset>
